<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VaultActivity" >

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtSights"
        android:layout_alignBottom="@+id/txtSights"
        android:layout_toRightOf="@+id/txtSights"
        android:background="@drawable/border_blue"
        android:height="300dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Shotgun"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtBarrelLength"
        android:layout_alignBottom="@+id/txtBarrelLength"
        android:layout_toLeftOf="@+id/txtCountry"
        android:background="@drawable/border_red"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Length"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Remmington 870"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/txtFeedSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtBarrelLength"
        android:layout_toRightOf="@+id/txtBarrelLength"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="FeedSystem"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtLength"
        android:layout_alignBottom="@+id/txtLength"
        android:layout_toRightOf="@+id/txtFeedSystem"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Country"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtMuzzleVelocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtFeedSystem"
        android:layout_alignLeft="@+id/txtCountry"
        android:background="@drawable/border_red"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Muzzle Velocity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtInfo"
        android:layout_alignBottom="@+id/txtInfo"
        android:layout_toRightOf="@+id/txtInfo"
        android:background="@drawable/border_blue"
        android:height="300dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Variant"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtCaliber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAction"
        android:layout_alignBottom="@+id/txtAction"
        android:layout_toLeftOf="@+id/txtAction"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Caliber"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtSights"
        android:background="@drawable/border_red"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Action"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtSights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtType"
        android:layout_centerVertical="true"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Sights"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtProduced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCaliber"
        android:layout_toLeftOf="@+id/txtAction"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Produced"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

    <TextView
        android:id="@+id/txtBarrelLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtProduced"
        android:layout_below="@+id/txtProduced"
        android:background="@drawable/border_blue"
        android:height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Barrel Length"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:width="200dp" />

</RelativeLayout>