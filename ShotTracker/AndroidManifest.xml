<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.knoxhouse.shottracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shottrackerapp.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shottrackerapp.VaultActivity"
            android:label="@string/title_activity_vault" >
        </activity>
        <activity
            android:name="com.shottrackerapp.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.shottrackerapp.GunViewerActivity"
            android:label="@string/title_activity_gun_viewer" >
        </activity>
        <activity
            android:name="com.shottrackerapp.WeaponInfoActivity"
            android:label="@string/title_activity_weapon_info" >
        </activity>
    </application>

</manifest>